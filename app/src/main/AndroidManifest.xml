    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SumarEcobitsActivity" />
        <activity android:name=".Activities.CanjearEcobitsActivity" />
        <activity android:name=".Activities.AyudaActivity" />
        <activity android:name=".Activities.SobreEcobitsActivity" />
        <activity android:name=".Activities.EventosActivity" />
        <activity android:name=".Activities.MiPerfilActivity" />
        <activity android:name=".Activities.MiCuentaActivity" />
        <activity android:name=".Activities.MenuActivity" />
        <activity android:name=".Activities.EditarPerfilActivity" />
        <activity android:name=".Activities.MisEcobitsActivity" />
        <activity android:name=".Activities.LogrosActivity" />
        <activity android:name=".Activities.PpalUsuarioActivity" />
        <activity android:name=".Activities.Intro3Activity" />
        <activity android:name=".Activities.Intro2Activity" />
        <activity android:name=".Activities.EmpecemosActivity" />
        <activity android:name=".Activities.RegistroActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>